<Window x:Class="NewPicasa.view.winMain_V2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewPicasa.view"
        mc:Ignorable="d"
        Title="winMain_V2" Height="480.364" Width="907.9" Icon="../image/icon.ico" FontFamily="Open Sans">
    <Grid x:Name="winMain">
        <Grid Width="106" HorizontalAlignment="Left">
            <TreeView x:Name="trvMain" Grid.Row="2" Margin="0,0,2,0" Loaded="trvMain_Loaded"/>
        </Grid>
        <ScrollViewer Margin="106,0,233,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <!--<Grid Width="539" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalAlignment="Left"> -->
            <ItemsControl Name="ImageList" ItemsSource="{Binding ImageList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="#FFD0D1D7" Padding="5" Margin="10,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <!--image and dimensions-->
                                <Grid Width="88" Height="55">
                                    <Image Source="{Binding Path}" MouseLeftButtonUp="Image_MouseLeftButtonUp"/>
                                    <TextBlock Background="#B2000000" Foreground="White" Height="16" TextAlignment="Center" VerticalAlignment="Bottom">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0}x{1}">
                                                <Binding Path="Height"/>
                                                <Binding Path="Width"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </Grid>
                                <!--name, type and size-->
                                <StackPanel Orientation="Vertical" Margin="5,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Name="ImageName" Margin="1" Foreground="#FF787878" Text="{Binding FileName}"/>
                                    <TextBlock Name="ImageType" Margin="1" Foreground="#FF787878">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="Type: {0}">
                                                <Binding Path="Extension"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <TextBlock Name="ImageSize" Margin="1" Foreground="#FF787878">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="Size: {0} Bytes">
                                                <Binding Path="Size"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <!--</Grid>-->
        </ScrollViewer>
        <Grid HorizontalAlignment="Right" Width="228">
            <Label x:Name="lblName" Content="Name" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txbName" Height="23" Margin="10,90,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <Label x:Name="lblTag" Content="Tags" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txbTags" Height="23" Margin="10,145,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <Label x:Name="lblComment" Content="Commentaire" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txbComment" Height="23" Margin="10,201,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <Label x:Name="lblDateTaken" Content="Date prise de vue" HorizontalAlignment="Left" Margin="10,228,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txbDateTaken" Height="23" Margin="10,259,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <Label x:Name="lblAuthor" Content="Auteurs" HorizontalAlignment="Left" Margin="10,285,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txbAuthor" Height="23" Margin="10,316,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <Label x:Name="lblHeightWidth" Content="Largeur x Hauteur" HorizontalAlignment="Left" Margin="10,344,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txbHeightWidth" Height="23" Margin="10,375,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Window>
