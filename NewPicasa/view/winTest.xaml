<Window x:Name="winTest" x:Class="NewPicasa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewPicasa"
        mc:Ignorable="d"
        Title="NewPicasa" Height="499.267" Width="804" FontFamily="Open Sans" Background="#eaecee">

    <Grid x:Name="mainContent">

        <Grid.RowDefinitions>
            <RowDefinition x:Name="Menu" Height="29" />
            <RowDefinition x:Name="Filter" Height="57" />
            <RowDefinition x:Name="WrapContentH" Height="383" />
            <RowDefinition x:Name="WrapContentH2" Height="0*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="Computer" Width="Auto" MinWidth="103"/>
            <ColumnDefinition x:Name="WrapContentV" Width="53*"/>
            <ColumnDefinition x:Name="Metadata" Width="10*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="Fichier" Height="29" Panel.ZIndex="10">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Content" Value="Fichier" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="VerticalAlignment" Value="Top" />
                    <Setter Property="Width" Value="103" />
                    <Setter Property="Grid.Column" Value="0" />
                    <Setter Property="Background" Value="{x:Null}" />
                    <Setter Property="BorderBrush" Value="{x:Null}" />
                    <Style.Triggers>
                        
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Rectangle Fill="red" Grid.Row=" 0" Grid.Column=" 0" Grid.ColumnSpan=" 3" Stroke="Black" StrokeThickness="3"/>

        <Button x:Name="Save" Height="29">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Content" Value="Sauvegarder" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="VerticalAlignment" Value="Top" />
                    <Setter Property="Width" Value="103" />
                    <Setter Property="Grid.Column" Value="1" />
                    <Setter Property="Background" Value="{x:Null}" />
                    <Setter Property="BorderBrush" Value="{x:Null}" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Button x:Name="Imprimer" Height="29" Margin="103,0,0,0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Content" Value="Imprimer" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="VerticalAlignment" Value="Top" />
                    <Setter Property="Width" Value="103" />
                    <Setter Property="Grid.Column" Value="1" />
                    <Setter Property="Background" Value="{x:Null}" />
                    <Setter Property="BorderBrush" Value="{x:Null}" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Button x:Name="Envoyer" Height="29" Margin="206,0,0,0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Content" Value="Envoyer" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="VerticalAlignment" Value="Top" />
                    <Setter Property="Width" Value="103" />
                    <Setter Property="Grid.Column" Value="1" />
                    <Setter Property="Background" Value="{x:Null}" />
                    <Setter Property="BorderBrush" Value="{x:Null}" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">

                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>


